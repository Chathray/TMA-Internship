@model QuestionModel
@{
    ViewData["Title"] = " Q & A";
}
<h2 class="page-header-title pl-3 mb-5">@ViewData["Title"]</h2>

<div class="accordion mx-3" id="accordionE">
    @foreach (var X in Model.QA)
    {
        <div class="card" asp-route-id="heading_@X.Index">
            <a class="pt-3 px-3 pb-2 card-btn btn-block" href="javascript:;" data-toggle="collapse" data-target="#question_@X.Index" aria-expanded="true" aria-controls="question_@X.Index">
                <p class="h5">Hỏi: @X.InData</p>
                <span class="card-btn-toggle">
                    <span class="card-btn-toggle-default">
                        <i class="tio-add"></i>
                    </span>
                    <span class="card-btn-toggle-active">
                        <i class="tio-remove"></i>
                    </span>
                </span>
            </a>

            <div id="question_@X.Index" class="collapse show" aria-labelledby="heading_@X.Index">
                <div class="px-3">
                    <p><strong>Đáp: </strong>@Html.Raw(X.OutData)</p>
                </div>
            </div>
        </div>
    }
</div>